{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@webgpu/types", "./src/types"],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "importsNotUsedAsValues":"remove",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
  },
  "include": [
    "src"
  ]
}
